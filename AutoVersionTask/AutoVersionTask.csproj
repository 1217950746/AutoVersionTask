<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net472</TargetFramework>
        <LangVersion>latest</LangVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <NoPackageAnalysis>true</NoPackageAnalysis>
        <BuildOutputTargetFolder>tasks</BuildOutputTargetFolder>
        <DevelopmentDependency>true</DevelopmentDependency>
        <PackageOutputPath>..\Packages</PackageOutputPath>
        <Version>1.1.0</Version>
        <Authors>ONEO</Authors>
        <Configurations>Debug</Configurations>
        <Platforms>x86</Platforms>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="LibGit2Sharp" Version="0.27.0-preview-0034" />
        <PackageReference Include="Microsoft.Build.Framework" Version="16.4.0" />
        <PackageReference Include="Microsoft.Build.Utilities.Core" Version="16.4.0" />

        <PackageReference Update="@(PackageReference)" PrivateAssets="All" />
    </ItemGroup>
    <ItemGroup>
        <None Include="Assets\build\**" Pack="True" PackagePath="build\" />
        <None Include="Assets\buildMultiTargeting\**" Pack="True" PackagePath="buildMultiTargeting\" />

        <None Include="bin\Debug\net472\LibGit2Sharp.dll" Pack="True" PackagePath="tasks\net472\" />
        <None Include="bin\Debug\net472\lib\win32\x86\*.dll" Pack="True" PackagePath="tasks\net472\lib\win32\x86\" />
    </ItemGroup>
</Project>
